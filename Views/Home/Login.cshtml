@{
    ViewBag.Title = "Login";
}
@model BCSF12A502.Models.User

<!Doctype html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        .rcorners {
            border-radius: 25px;
            border: 2px solid #000000;
            padding: 20px;
        }
    </style>
   
</head>
<body>

    <div class="row" style="text-align:center; margin-bottom:105px">
        <div class="col-sm-6 col-sm-offset-3 ">

            <h3 style="font-family: 'Monotype Corsiva'; margin-top: 10px; margin-bottom: 10px; text-align: center; color: #1f0d07;"><span class="glyphicon glyphicon-log-in" style=" color: #1f0d07;"></span> Login</h3>

            @* <form class="rcorners"  action="/Home/LoginVerification" method="post">

                    <input type="email" placeholder="Email"  name="Email" required style="height:30px ; width:300px ;font-size:small ; border-radius: 25px; border: 2px solid #D3D3D3; padding: 20px;" />
                    <br />
                    <br />
                    <input type="password" placeholder="Password" name="Password" required style="height:30px ; width:300px ;font-size:small ; border-radius: 25px; border: 2px solid #D3D3D3; padding: 20px;" />
                    <br />
                    <br />
                    <button type="submit" class="btn btn-primary" style="height:40px ; width:300px">Login</button>

                </form>*@
            @using (Html.BeginForm("LoginVerification", "Home", FormMethod.Post ,new {@class="rcorners"}))
                {
                @Html.AntiForgeryToken();
                @Html.ValidationSummary(true)

                <fieldset>
                    <div>
                        @Html.TextBoxFor(m => m.Email, new {placeholder="Email",required="true" ,type="Email" , id="t1" , style="height:30px ; width:300px ;font-size:small ; border-radius: 25px; border: 2px solid #D3D3D3; padding: 20px"})
                        @Html.ValidationMessageFor(m=>m.Email)
                    </div>
                    <br />

                    <div>
                        @Html.TextBoxFor(m => m.Password, new { placeholder = "Password", required = "true", type = "password", id = "t2", style = "height:30px ; width:300px ;font-size:small ; border-radius: 25px; border: 2px solid #D3D3D3; padding: 20px" })

                        @Html.ValidationMessageFor(m=>m.Password)
                    </div>
                    <br />
                    <br />
                    <button type="submit" class="btn btn-primary" style="height:40px ; width:300px">Login</button>
                </fieldset>
                
                }

        </div>
    </div>

    @section Scripts{
        @Scripts.Render("~/bundles/jqueryval")
    }

    <script>
        function clearFields() {
            document.getElementById("t1").value = "";
            document.getElementById("t2").value = "";
        }
    </script>

</body>
</html>
